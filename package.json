{
  "name": "ts3-manager",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others --names \"FRONTEND,BACKEND\" -c \"bgGreen.black,bgMagenta.black\" \"npm run serve --workspace=@ts3-manager/ui\" \"npm run dev --workspace=@ts3-manager/server\"",
    "build": "npm run ui:build && pkg ./packages/server/",
    "ui:build": "npm run build --workspace=@ts3-manager/ui"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "pkg": "^4.4.9"
  }
}
